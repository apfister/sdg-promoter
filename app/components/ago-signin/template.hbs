{{#if isAuthenticated}}
 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <img width="18" height="18" class="profile-image" src="{{thumbnailUrl}}">
    <span class="profilename">{{displayName}}</span>&nbsp;<span class="caret"></span>
  </a>
  <ul class="dropdown-menu user-menu" role="menu">
    <li>
      <a href="{{profileUrl}}" class="profile-link" target="_blank">
        <div class="profile-header">
          <img width="36" height="36" class="profile-header-image" src="{{thumbnailUrl}}">
          <span class="my-profile">{{session.currentUser.fullName}}</span>
          <h6 class="username">{{session.currentUser.username}}</h6>
        </div>
      </a>
    </li>
    
    <!-- <li ><a {{action "showSettings" }} >{{t 'header.settings'}}</a></li> -->
    
    <li><a class="signout" href="{{signoutUrl}}">{{t "header.signOut"}}</a></li>
  </ul>
{{else}}
  {{#link-to 'signin'}}
    {{t "header.signIn"}}
  {{/link-to}}
{{/if}}